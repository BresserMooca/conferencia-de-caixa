#include <iostream>
#include <stdlib.h>


using namespace std;

int main () {

int cincoc, dezc, vintec, cinquentac, umreal, dois, cinco, dez, vinte, cinquenta, cem, duzentos, gaveta;
int moedas, notas, user;
float cc = 0.05, dc = 0.10, vc = 0.25, ccc = 0.50, um = 1, d = 2, cn = 5, dd = 10, v = 20, cq = 50, c = 100, dz = 200;
float total;

cout << "Seja bem vindo ao assitente de caixa"<<endl;


//MOEDAS//
    cout << "Digite a quantidade de moedas de 0,05 " << endl;
    cin >> cincoc;
    cout << "Digite a quantidade de moedas de 0,10 " << endl;
    cin >> dezc;
    cout << "Digite a quantidade de moedas de 0,25 " << endl;
    cin >> vintec;
    cout << "Digite a quantidade de moedas de 0,50 " << endl;
    cin >> cinquentac;
    cout << "Digite a quantidade de moedas de 1,00 " << endl;
    cin >> umreal;

//NOTAS//
    cout << "Digite a quantidade de notas de 2,00 " << endl;
    cin >> dois;
    cout << "Digite a quantidade de notas de 5,00 " << endl;
    cin >> cinco;
    cout << "Digite a quantidade de notas de 10,00 " << endl;
    cin >> dez;
    cout << "Digite a quantidade de notas de 20,00 " << endl;
    cin >> vinte;
    cout << "Digite a quantidade de notas de 50,00 " << endl;
    cin >> cinquenta;
    cout << "Digite a quantidade de notas de 100,00 " << endl;
    cin >> cem;
    cout << "Digite a quantidade de notas de 200,00 " << endl;
    cin >> duzentos;

    cout << "Digite a quantidade da gaveta externa (40,00 padrao)" << endl;
    cin >> gaveta;

//MENOR GAVETA//
    cout << "Menor gaveta:" << endl;
    cout <<  cincoc * cc  << endl;
    cout << dezc * dc << endl;
    cout << vintec * vc << endl;
    cout << cinquentac * ccc << endl;
    cout << umreal * um << endl;
    cout << "" <<endl;

//MAIOR GAVETA//
    cout << "Maior Gaveta:" <<endl;
    cout<< dois * d << endl;
    cout<< cinco * cn << endl;
    cout<< dez * dd << endl;
    cout<< vinte * v << endl;
    cout<< cinquenta * cq << endl;
    cout<< cem * c << endl;
    cout<< duzentos * dz << endl;
    cout << "" <<endl;

//GAVETA EXTERNA//
    cout<< "Gaveta Externa:"<<endl;
    cout<< gaveta << endl;
    cout << "" <<endl;


system("pause");
return 0;
}
